{
    "version": 2,
    "builds": [
      {
        "src": "build/app.js",
        "use": "@now/node"
      }
    ],
    "routes": [
        {
            "src": "/routers/(.*)", 
            "dest": "build/routers/router.js"
        },
        {
            "src": "/(.*)",
            "dest": "build/app.js"
        }
    ]
}
  